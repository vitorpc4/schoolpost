{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "moduleNameMapper": {
    "@/(.*)$": "<rootDir>/src/$1"
  },
  "moduleDirectories": ["node_modules", "src", "test/Mock"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 999999
}
